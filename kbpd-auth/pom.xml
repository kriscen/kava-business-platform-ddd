        <dependency>
            <groupId>com.kava.kbpd</groupId>
            <artifactId>kbpd-upms-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.kava.kbpd</groupId>
            <artifactId>kbpd-member-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.kava.kbpd</groupId>
            <artifactId>kbpd-common-cache</artifactId>
        </dependency>
        <dependency>
